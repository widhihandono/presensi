<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid
                android:color="@color/green">
            </solid>

            <corners
                android:radius="4dp">
            </corners>

            <!--<stroke-->
            <!--android:width="1dp"-->
            <!--android:color="#B6B6B6">-->
            <!--</stroke>-->

            <padding
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp">
            </padding>

            <size android:height="40dp"/>

        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid
                android:color="#E4E4E4">
            </solid>

            <corners
                android:radius="4dp">
            </corners>

            <!--<stroke-->
            <!--android:width="1dp"-->
            <!--android:color="#B6B6B6">-->
            <!--</stroke>-->

            <padding
                android:top="10dp"
                android:right="10dp"
                android:left="10dp"
                android:bottom="10dp">
            </padding>

            <size android:height="70dp"/>

        </shape>
    </item>
</selector>
