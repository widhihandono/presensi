<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu_Utama_Activity"
    android:id="@+id/snackbar_utama"
    android:background="@drawable/background_color_2">

    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/swLayout">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5C5B5B"
        android:id="@+id/tvTgl"
        android:textSize="17dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5C5B5B"
        android:id="@+id/tvJam"
        android:layout_alignParentRight="true"
        android:textSize="17dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"/>
    <ImageView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/logo"
        android:layout_below="@id/tvJam"
        android:layout_marginTop="10dp"
        android:src="@drawable/logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#5C5B5B"
        android:id="@+id/tvVersion"
        android:layout_below="@id/tvJam"
        android:layout_alignParentRight="true"
        android:textSize="17dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp" />


    <TextView
        android:id="@+id/tvUpdateData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvVersion"
        android:layout_alignParentRight="true"
        android:layout_marginTop="3dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/background_btn_biru"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text="Ambil Settingan"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tvUpdateData"
    android:layout_marginTop="10dp"
    android:id="@+id/lnProfile"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#243ABD"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="5dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/imgProfile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Nip"
                android:id="@+id/tvNip"
                android:textSize="16dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="Nama"
                android:id="@+id/tvNama"
                android:layout_marginTop="3dp"
                android:textSize="16dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="Profile"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/background_btn_biru"
                    android:id="@+id/tvEditProfile"
                    android:layout_marginTop="3dp"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:text="Bantuan"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingRight="15dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/background_btn_biru"
                    android:id="@+id/tvHelp"
                    android:layout_marginTop="3dp"
                    android:textSize="16dp"/>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#243ABD"
        android:layout_marginTop="10dp"/>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:id="@+id/lnMenu"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/lnProfile">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:id="@+id/lnPresensiDatang"
            android:orientation="vertical"
            android:background="@drawable/background_menu">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/logo_menu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presensi Datang"
                android:textColor="#5E5D5D"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:id="@+id/lnPresensiPulang"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:background="@drawable/background_menu">
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/logo_menu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Presensi Pulang"
                android:textColor="#5E5D5D"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:paddingBottom="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/lnMenu">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="53dp"
            android:layout_marginLeft="53dp"
            android:background="@drawable/background_btn_blue"
            android:text="History Presence"
            android:textColor="#FFFF"
            android:textSize="19dp"
            android:gravity="center"
            android:id="@+id/tvHistory"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginRight="53dp"
            android:layout_marginLeft="53dp"
            android:background="@drawable/background_btn_blue"
            android:text="Presensi Belum Dikirim (0)"
            android:textColor="#FFFF"
            android:textSize="16dp"
            android:gravity="center"
            android:id="@+id/tvPresensiOffline"/>

    </LinearLayout>
</RelativeLayout>
    </android.support.v4.widget.NestedScrollView>
    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_add_unit_kerja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        app:backgroundTint="@color/green"
        app:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_add_location" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:visibility="invisible"
        app:elevation="6dp"
        app:backgroundTint="@color/blue"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_list" />
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        app:elevation="6dp"
        android:visibility="gone"
        app:backgroundTint="#FF0055"
        app:pressedTranslationZ="12dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_add" />
</android.support.design.widget.CoordinatorLayout>