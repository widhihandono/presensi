    android:layout_marginTop="3dp"
    android:background="#E7E6E6">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:id="@+id/tvUnitKerja"
